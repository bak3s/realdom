<h1 class="page-header">Tenants</h1>
<div class="table-responsive">
  <table class="table table-striped" role="grid">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Date of birth</th>
        <th>Occupation</th>
        <th>Annual Income</th>
        <th>Dependents</th>
        <th class="text-center">Gender</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @tenants.each do |tenant| %>
        <tr>
          <td><%= tenant.id %></td>
          <td><%= link_to tenant.name, tenant %></td>
          <td><%= tenant.dob.to_formatted_s(:long) %></td>
          <td><%= tenant.occupation %></td>
          <td><%= tenant.annual_income %></td>
          <td><%= tenant.no_of_dependents %></td>
          <td class="text-center">
              <i class="<%= get_gender_icon_class(tenant.gender) %>"></i>
          </td>
          <td class="text-right">
            <%= link_to '', edit_tenant_path(tenant), class: 'fa fa-pencil-square' %>&nbsp;
            <%= link_to '', tenant_path(tenant), method: :delete, data: { confirm: 'Are you sure you want to delete this tenant?' }, class: 'fa fa-minus-square text-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "Add Tenant", new_tenant_path, class: 'btn btn-primary' %>
<div style="float:right;"><%= will_paginate @tenants %></div>
